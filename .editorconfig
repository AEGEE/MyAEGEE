root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8

# MUST be tab indentation for Makefile
[Makefile]
indent_style = tab
indent_size = 8

[{Dockerfile,docker-compose.yml}]
indent_style = space
indent_size = 2
